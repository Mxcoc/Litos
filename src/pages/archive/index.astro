---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

// 定义文章类型
type Post = CollectionEntry<'posts'>;

// 1. 获取文章集合
const allPosts = await getCollection('posts');

// 2. 过滤并排序
// 移除了 post.data.date 的检查，因为 TypeScript 确认它不存在
const sortedPosts = allPosts
  .filter((post) => !post.data.draft)
  .sort((a, b) => {
    return new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf();
  });

// 3. 统计标签和年份
const tagCounts: Record<string, number> = {};
const postsByYear: Record<number, Post[]> = {};

sortedPosts.forEach((post) => {
  const tags: string[] = post.data.tags || [];
  
  tags.forEach((tag) => {
    tagCounts[tag] = (tagCounts[tag] || 0) + 1;
  });

  // 直接使用 pubDate，不再检查 date
  const year = new Date(post.data.pubDate).getFullYear();
  
  if (!postsByYear[year]) {
    postsByYear[year] = [];
  }
  postsByYear[year].push(post);
});

const sortedTags = Object.keys(tagCounts).sort();
const years = Object.keys(postsByYear).map(Number).sort((a, b) => b - a);
---

<Layout title="归档 | Archive" description="所有文章的历史归档">
  <main class="archive-container">
    <h1 class="page-title">文章归档</h1>

    <section class="category-cloud">
      <div class="stats-info">
        共 <strong>{sortedPosts.length}</strong> 篇文章，<strong>{sortedTags.length}</strong> 个分类
      </div>
      <div class="tags-list">
        {sortedTags.map(tag => (
          <a href={`/tags/${tag}`} class="tag-chip">
            <span class="tag-name"># {tag}</span>
            <span class="tag-count">{tagCounts[tag]}</span>
          </a>
        ))}
      </div>
    </section>

    <hr class="divider" />

    <section class="timeline">
      {years.map((year, index) => (
        <details class="year-group" open={index === 0}>
          <summary class="year-summary">
            <span class="year-number">{year}</span>
            <span class="year-count">{postsByYear[year].length} 篇</span>
            <span class="toggle-icon">▼</span>
          </summary>
          
          <ul class="post-list">
            {postsByYear[year].map((post) => (
              <li class="post-item">
                <span class="post-date">
                  {new Date(post.data.pubDate).toLocaleDateString('zh-CN', { month: '2-digit', day: '2-digit' })}
                </span>
                <a href={`/posts/${post.id}/`} class="post-link">
                  {post.data.title}
                </a>
              </li>
            ))}
          </ul>
        </details>
      ))}
    </section>
  </main>
</Layout>

<style>
  .archive-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .page-title {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 2rem;
    text-align: center;
  }

  .divider {
    border: 0;
    border-top: 1px solid #e5e7eb;
    margin: 2rem 0;
  }

  /* Tags Styles */
  .stats-info {
    text-align: center;
    margin-bottom: 1rem;
    color: #666;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.8rem;
  }

  .tag-chip {
    display: inline-flex;
    align-items: center;
    background-color: #f3f4f6;
    border-radius: 9999px;
    padding: 0.25rem 0.75rem;
    text-decoration: none;
    color: #374151;
    font-size: 0.875rem;
    transition: all 0.2s;
    border: 1px solid transparent;
  }

  .tag-chip:hover {
    background-color: #e5e7eb;
    border-color: #d1d5db;
  }

  .tag-count {
    background-color: #fff;
    border-radius: 50%;
    width: 1.25rem;
    height: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    margin-left: 0.5rem;
    color: #6b7280;
  }

  /* Timeline Styles */
  .year-group {
    margin-bottom: 1.5rem;
    border-left: 2px solid #e5e7eb;
    padding-left: 1.5rem;
  }

  .year-summary {
    cursor: pointer;
    list-style: none;
    display: flex;
    align-items: center;
    font-size: 1.5rem;
    font-weight: bold;
    color: #111827;
    margin-bottom: 1rem;
    position: relative;
  }
  
  .year-summary::-webkit-details-marker {
    display: none;
  }

  .toggle-icon {
    font-size: 0.8rem;
    margin-left: auto;
    transition: transform 0.3s ease;
    color: #9ca3af;
  }

  details[open] .toggle-icon {
    transform: rotate(180deg);
  }

  .year-count {
    font-size: 0.9rem;
    font-weight: normal;
    color: #6b7280;
    margin-left: 1rem;
    background: #f3f4f6;
    padding: 2px 8px;
    border-radius: 4px;
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post-item {
    display: flex;
    align-items: baseline;
    margin-bottom: 0.75rem;
    padding: 0.5rem 0;
    transition: transform 0.2s;
  }

  .post-item:hover {
    transform: translateX(5px);
  }

  .post-date {
    font-family: monospace;
    color: #6b7280;
    margin-right: 1rem;
    min-width: 60px;
  }

  .post-link {
    color: #374151;
    text-decoration: none;
    font-weight: 500;
  }

  .post-link:hover {
    color: #2563eb;
    text-decoration: underline;
  }

  /* Dark Mode */
  :global(.dark) .tag-chip {
    background-color: #374151;
    color: #e5e7eb;
  }
  :global(.dark) .tag-count {
    background-color: #1f2937;
    color: #9ca3af;
  }
  :global(.dark) .year-summary {
    color: #f3f4f6;
  }
  :global(.dark) .post-link {
    color: #d1d5db;
  }
  :global(.dark) .post-link:hover {
    color: #60a5fa;
  }
</style>
