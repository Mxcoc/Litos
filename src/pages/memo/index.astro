---
import Layout from "~/layouts/Layout.astro";

// 远程 BroadcastChannel API
const MEMO_API = "https://memo.cattk.com/api/feed"; // 你部署的 BroadcastChannel 实例

// 拉取 Memos 数据
let memos = [];
try {
  const res = await fetch(MEMO_API);
  const data = await res.json();
  memos = data.items || [];
} catch (e) {
  console.error("无法加载 Memos 数据：", e);
}
---

<Layout title="Memos" description="记录我的瞬间想法">

  <main class="memo-page">
    <h1 class="memo-title">Memos</h1>

    {memos.length === 0 && (
      <p class="loading">加载中… 或 API 暂不可访问</p>
    )}

    <div class="memo-list">
      {memos.map((item) => {
        const content = item.content_text || item.title || "";
        const date = new Date(item.date_published).toLocaleString();

        // 识别图片（只要文本里出现 http 开头的 jpg/png/webp）
        const imageRegex = /(https?:\/\/[^\s]+?\.(jpg|jpeg|png|webp|gif))/gi;
        const images = content.match(imageRegex) || [];

        // 去掉图片 URL，只留下文本
        const pureText = content.replace(imageRegex, "").trim();

        return (
          <article class="memo-card" id={`memo-${item.id || date}`}>
            <div class="memo-header">
              <time>{date}</time>
            </div>

            {pureText && <p class="memo-text">{pureText}</p>}

            {images.length > 0 && (
              <div class="memo-images">
                {images.map((url) => (
                  <img
                    src={url}
                    loading="lazy"
                    class="memo-img"
                    onclick={`zoomImage('${url}')`}
                  />
                ))}
              </div>
            )}
          </article>
        );
      })}
    </div>
  </main>

  <!-- 图片放大预览 -->
  <div id="zoom-overlay" onclick="closeZoom()">
    <img id="zoom-img" />
  </div>

  <script>
    function zoomImage(url) {
      const overlay = document.getElementById("zoom-overlay");
      const img = document.getElementById("zoom-img");
      img.src = url;
      overlay.style.display = "flex";
    }
    function closeZoom() {
      document.getElementById("zoom-overlay").style.display = "none";
    }
  </script>

  <style>
    .memo-page {
      max-width: 800px;
      margin: auto;
      padding: 20px;
    }

    .memo-title {
      font-size: 2rem;
      font-weight: bold;
      margin-bottom: 1.5rem;
      text-align: center;
    }

    .loading {
      text-align: center;
      opacity: 0.6;
      margin-top: 20px;
    }

    .memo-list {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .memo-card {
      background: var(--card-bg, #fff);
      border-radius: 12px;
      padding: 16px;
      box-shadow: 0 4px 12px rgb(0 0 0 / 6%);
      transition: transform 0.2s ease;
    }
    .memo-card:hover {
      transform: translateY(-3px);
    }

    .memo-header time {
      font-size: 0.85rem;
      opacity: 0.6;
    }

    .memo-text {
      margin-top: 10px;
      line-height: 1.6;
      white-space: pre-wrap;
    }

    .memo-images {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
      gap: 10px;
      margin-top: 12px;
    }

    .memo-img {
      width: 100%;
      border-radius: 8px;
      cursor: pointer;
      transition: opacity 0.2s;
    }
    .memo-img:hover {
      opacity: 0.9;
    }

    /* 图片预览 Overlay */
    #zoom-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.8);
      z-index: 999;
      justify-content: center;
      align-items: center;
    }

    #zoom-img {
      max-width: 90%;
      max-height: 90%;
      border-radius: 12px;
      box-shadow: 0 0 20px rgba(0,0,0,0.4);
    }

    /* 移动端适配 */
    @media (max-width: 640px) {
      .memo-card {
        padding: 12px;
      }
      .memo-images {
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
      }
    }
  </style>

</Layout>